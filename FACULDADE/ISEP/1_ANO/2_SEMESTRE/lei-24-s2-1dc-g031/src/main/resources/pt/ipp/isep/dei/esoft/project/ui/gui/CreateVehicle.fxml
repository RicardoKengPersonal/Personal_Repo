<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane hgap="10" stylesheets="@css/CreateCollaboratorAssignJob.css" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.CreateVehicleGUI">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <!-- Form fields for collaborator's details -->
        <Label styleClass="label" text="Plate:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="plateField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label styleClass="label" text="Brand:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="brandField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label styleClass="label" text="Model:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="modelField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label styleClass="label" text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label styleClass="label" text="Tare Weight:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="tareWeightField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label styleClass="label" text="Gross Weight:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="grossWeightField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label styleClass="label" text="Current Km:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="currentKmField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label styleClass="label" text="Register Date:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="registerDateField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <Label styleClass="label" text="Acquisition Date:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <TextField fx:id="acquisitionDateField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        <Label styleClass="label" text="Maintenance Frequency:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
        <TextField fx:id="maintenanceFrequencyField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

        <!-- Submit and Go Back buttons -->
        <Button fx:id="submitButton" onAction="#submit" styleClass="button" text="Submit" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="10" />
        <Button fx:id="goBackButton" onAction="#goBack" styleClass="button" text="Go Back" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="10" />
    </children>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
