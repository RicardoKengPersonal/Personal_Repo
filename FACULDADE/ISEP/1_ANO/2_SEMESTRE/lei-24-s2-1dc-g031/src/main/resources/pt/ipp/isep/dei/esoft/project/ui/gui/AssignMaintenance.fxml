<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.AssignMaintenanceGUI"
          hgap="10" vgap="10"
          stylesheets="@css/AssignSkillToCollaborator.css">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Registered Vehicles:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label"/>
    <ListView fx:id="vehiclesListView" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="200.0" prefHeight="380.0"/>

    <Label text="Vehicles Needing Maintenance:" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="label"/>
    <ListView fx:id="vehiclesNeedingMaintenanceListView" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" prefHeight="380.0"/>

    <Button fx:id="goBackButton" text="Go Back" onAction="#goBack" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="RIGHT" styleClass="button"/>
</GridPane>

