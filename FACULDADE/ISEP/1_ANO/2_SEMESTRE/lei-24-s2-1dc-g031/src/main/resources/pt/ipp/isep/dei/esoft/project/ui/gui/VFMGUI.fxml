<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="center" hgap="10" stylesheets="@css/HRMGUI.css" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.VFMGUI">
    <children>
        <VBox>
            <children>
                <VBox alignment="center" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <children>
                        <Label styleClass="label" text="VFM MENU" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    </children>
                </VBox>
                <VBox alignment="center" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <children>
                        <Button fx:id="createVehicleButton" onAction="#handleCreateVehicleButtonAction" styleClass="button" text="Register a Vehicle" />
                        <Button fx:id="registerMaintenanceButton" onAction="#handleRegisterVehicleMaintenanceButtonAction" styleClass="button" text="Register a Vehicle Checkup" />
                        <Button fx:id="assignMaintenanceButton" onAction="#handleAssignMaintenanceButtonAction" styleClass="button" text="Show Vehicles" />
                        <Button fx:id="logoutButton" onAction="#handleLogoutButtonAction" styleClass="button" text="Logout" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>