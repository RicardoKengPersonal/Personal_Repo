<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" stylesheets="@css/Agenda.css" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.AgendaGUI">
    <ListView fx:id="agendaEntryList" />
    <HBox alignment="BOTTOM_RIGHT" spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
        </padding>
        <Button fx:id="button5" text="New Entry" onAction="#handleCreateEntryButtonAction" styleClass="button"/>
        <Button fx:id="button1" text="Postpone" onAction="#handlePostponeButtonAction" styleClass="button"/>
        <Button fx:id="button2" text="Deactivate" onAction="#handleDeactivateButtonAction" styleClass="button"/>
        <Button fx:id="button3" text="Assign Team" onAction="#handleAssignTeamButtonAction" styleClass="button"/>
        <Button fx:id="button4" text="Assign Vehicle(s)" onAction="#handleAssignVehiclesButtonAction" styleClass="button"/>
        <Button text="Go Back" onAction="#goBack" styleClass="button"/>
    </HBox>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>